<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Blog App | Home</title>
</head>

<body>

    <%- include('./partials/nav') %>
        <div class="container mt-3">
            <div class="row row-cols-4">
                <% blogs.forEach((blog)=> { %>
                    <div class="col">
                        <div class="card m-2 col" style="width: 18rem; height: 450px;">
                            <img src="<%= blog.coverImageURL %>" class="img-fluid img-thumbnail" >
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= blog.title %>
                                </h5>
                                <!-- <p class="card-text">
                                        <%= blog.body %>
                                    </p> -->

                                <a href="/blog/<%= blog._id %>" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>



        <%- include('./partials/foot') %>
            <%- include('./partials/script') %>
</body>

</html>